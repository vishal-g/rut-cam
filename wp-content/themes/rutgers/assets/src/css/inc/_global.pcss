/* Featured Box */

body .ta-featured-box {
  @apply bg-clr-white rounded shadow-sh-01 max-lg:p-sp-base p-10 !pb-0 text-clr-secondary;
  .wp-block-button {
    &:has(.wp-block-button__link) {
      @apply mx-auto md:mx-0;
    }
  }
  .wp-block-button__link {
    @apply px-14;
  }

  &__col-1 {
    h2,
    h3,
    h4,
    h5,
    h6 {
      @apply text-fs-4-xl text-clr-secondary;
      font-size: clamp(1.75rem, 3vw, 2.25rem);
    }
  }
  &__col-2 {
    ul {
      & * + * {
        @apply mt-3;
      }
      li {
        @apply text-fs-xl;
        @apply text-left leading-7 pl-5 bg-[url("../images/bullet-icon.svg")] bg-[left_top_0.5rem] bg-no-repeat;
      }
    }
    .ta-featured-box-ul {
      margin-block-start: var(--wp--preset--spacing--sp-sm);
    }
  }
  p{
    @apply text-fs-xl;
  }
  @media screen and (max-width: theme(screens.lg)){
    gap: var(--wp--preset--spacing--sp-base);
  }
  .ta-featured-box__col-2-ul{
    margin-block-start: var(--wp--preset--spacing--sp-sm);
  }
}

/* Text Over Image Section */
body .ta-text-over-image.wp-block-cover {
  &.wp-block-cover {
    justify-content: unset;
    align-items: unset;
    padding: 3rem;
    padding-left: 0;
    padding-right: 0;
  }
  .wp-block-cover__inner-container {
    max-width: 500px;
    @apply shadow-sh-01 p-sp-xl rounded text-fs-base text-clr-secondary bg-clr-white;
    .wp-block-group > * + * {
      margin-block-start: var(--wp--preset--spacing--sp-sm);
    }
    h2 {
      font-size: clamp(1.75rem, 3vw, 2.25rem);
    }
  }
  .wp-block-cover__image-background {
    width: 75%;
    right: 0;
    left: unset;
    object-position: top right !important;
  }
  .wp-block-cover__background {
    background: none;
  }
  /* Left Image */
  &.ta-text-over-image__left {
    @apply justify-end;
    .wp-block-cover__image-background {
      right: unset;
      left: 0;
      object-position: top left !important;
    }
    .wp-block-cover__inner-container {
    }
  }
}
@media screen and (max-width: theme(screens.md)) {
  .wp-block-cover.ta-text-over-image {
    @apply flex-col !py-sp-sm;
    img.wp-block-cover__image-background {
      position: unset;
      @apply !w-full rounded-t;
    }
    .wp-block-cover__inner-container {
      @apply mx-auto !max-w-full !p-sp-base !rounded-t-none;
    }
  }
}
/* Info block Small - Best fitted into 3 col layout */
body .ta-info-block-small {
  @apply p-sp-inner pb-0 bg-clr-white text-center min-h-full flex flex-col justify-between rounded;
  & .ta-info-block-small__title {
    @apply text-left !m-0 text-clr-secondary;
  }
  & .ta-info-block-small__text {
    @apply text-left mb-auto text-clr-secondary;
  }
  .wp-block-buttons {
    justify-content: center;
  }
}

/* Template Header footer */

.wp-block-post-content {
  margin-top: 0;
}

/* Carousel common */
/* 
const imageClass = showImage ? "" : "ta-img-hidden";
const wrapperClass = showImage ? "" : "ta-wrapper-rounded-border";
const ctaClass = showCTA ? "" : "ta-cta-hidden"; */

.ta-carousel-container {
  .ta-carousel-text-wrapper {
    @apply w-full;
  }
  &.ta-img-hidden {
    img {
      display: none;
    }
  }
  &.ta-wrapper-rounded-border {
    .ta-carousel-text-wrapper {
      @apply rounded-t;
    }
  }
  &.ta-cta-hidden {
    .ta-carousel__button {
      display: none;
    }
    .ta-carousel-text-wrapper {
      @apply pb-4;
    }
  }
}

@media screen and (max-width: theme(screens.sm)) {
  body .ta-carousel-container.wp-block-group {
    margin-right: calc(var(--wp--style--root--padding-right) * -1) !important;
    margin-left: calc(var(--wp--style--root--padding-left) * -1) !important;
  }
}

body .ta-carousel-container.wp-block-group,
.wp-block-tbones-p-carousel-slider {
  .ta-carousel__button {
    @apply inline-block text-center  mt-7 justify-center mx-auto text-white bg-clr-primary p-2 px-4 lg:px-6;
    @media screen and (min-width: theme(screens.lg)) and (max-width: 1100px) {
      @apply px-3;
    }
  }
}

.swiper-pagination-bullet-active {
  @apply bg-clr-primary;
}

.swiper-horizontal > .swiper-pagination-bullets,
.swiper-pagination-bullets.swiper-pagination-horizontal,
.swiper-pagination-custom,
.swiper-pagination-fraction {
  bottom: auto;
}

.swiper .swiper-pagination {
  margin-top: 3.5rem;
  margin-bottom: 2.5rem;
}

/* Carousel Styling */

.has-global-padding
  :where(.has-global-padding)
  > .alignfull.ta-carousel-container {
  @media screen and (max-width: theme(screens.md)) {
    margin-right: calc(var(--wp--style--root--padding-right) * -1);
    margin-left: calc(var(--wp--style--root--padding-left) * -1);
  }
}

.sfas-carousel .swiper-slide h4 {
  @apply text-xl font-bold leading-6 mb-3 text-left text-clr-black;
}

.sfas-carousel .swiper-slide p {
  @apply text-fs-custom leading-5 text-left;
}

.sfas-carousel .swiper-wrapper {
  align-items: start;
}

.sfas-carousel .swiper {
  width: 100%;
  overflow: visible;
}

.sfas-carousel .swiper-slide {
  text-align: center;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: start;
  margin: 0px;
  background: white;
  transition: all 0.3s ease;
  opacity: 0.5;
  img {
    @apply rounded-t;
    &.image-hidden {
      @apply hidden;
    }
  }
}
.sfas-carousel .swiper-slide.swiper-slide-active {
  background: #fff;
  transform: scale(1.2);
  z-index: 2;
  opacity: 1;
}

.sfas-carousel .swiper-button-prev,
.sfas-carousel .swiper-button-next {
  /* @apply text-white bg-clr-primary rounded-full w-10 h-10; */
}
.sfas-carousel .swiper-button-next:after,
.sfas-carousel .swiper-button-prev:after {
  /* @apply text-white text-sm font-bold; */
}
.sfas-carousel .swiper-button-next {
  right: clamp(6%, 8.5vw, 28%);
}
.sfas-carousel .swiper-button-prev {
  left: clamp(6%, 8.5vw, 28%);
}

@media screen and (min-width: theme(screens.xs)) {
  .sfas-carousel .swiper-button-next {
    right: clamp(6%, 10.5vw, 28%);
  }
  .sfas-carousel .swiper-button-prev {
    left: clamp(6%, 10.5vw, 28%);
  }
}

@media screen and (min-width: theme(screens.sm)) {
  .sfas-carousel .swiper-button-next {
    right: clamp(6%, 11.5vw, 28%);
  }
  .sfas-carousel .swiper-button-prev {
    left: clamp(6%, 11.5vw, 28%);
  }
}

@media screen and (min-width: theme(screens.md)) {
  .sfas-carousel .swiper-button-next {
    right: clamp(6%, 6.5vw, 28%);
  }
  .sfas-carousel .swiper-button-prev {
    left: clamp(6%, 6.5vw, 28%);
  }
}

@media screen and (min-width: theme(screens.lg)) {
  .sfas-carousel .swiper-button-next {
    right: clamp(6%, 18vw, 28.5%);
  }
  .sfas-carousel .swiper-button-prev {
    left: clamp(6%, 18vw, 28.5%);
  }
}

