/* Staff page */

.ta-staff-card {
  @apply text-fs-sm p-7 rounded bg-clr-white md:p-0;
  @apply md:max-lg:!flex-nowrap;
  &.is-layout-flex {
    gap: var(--wp--preset--spacing--sp-sm);
    @apply md:max-lg:gap-sp-base;
  }

  p {
    @apply text-xs leading-lh-tight;
  }
  & * + * {
    margin-block-start: var(--wp--preset--spacing--sp-xs);
  }
  .ta-staff-card__info-wrapper {
    margin-block-start: var(--wp--preset--spacing--sp-0);
    @apply p-3 pl-0 self-start;
    & * + * {
      margin-block-start: var(--wp--preset--spacing--sp-xs);
    }
  }
  &__name {
    @apply font-fw-bold text-clr-black text-fs-xl;
    @media screen and (min-width: theme(screens.lg)) and (max-width: theme(screens.xl)) {
      font-size: clamp(0.9rem, 1.5vw, 1.25rem);
    }
  }
  &__title {
    @apply uppercase;
  }
  &__email {
    @apply text-clr-primary;
    a {
      @apply text-clr-primary;
    }
    margin-block-start: var(--wp--preset--spacing--sp-0);
  }
  img {
    @apply rounded md:rounded-none lg:max-xl:rounded md:max-lg:w-full;
  }
  div.wp-block-column {
    @apply basis-full lg:basis-1/2;
  }
  > div.is-layout-flow.wp-block-column {
    &:has(.wp-block-image) {
      @apply lg:max-xl:p-3 lg:max-xl:pr-sp-00;
    }
  }
  @media screen and (max-width: theme(screens.md)) {
    @apply rounded-none;
    margin-right: calc(var(--wp--style--root--padding-right) * -1) !important;
    margin-left: calc(var(--wp--style--root--padding-left) * -1) !important;
  }
}
div.ta-staff-block {
  .wp-block-columns {
    > .wp-block-column {
      @apply max-lg:!basis-full;
    }
  }
  > div.wp-block-columns {
    @apply !flex-wrap lg:!flex-nowrap;
  }
  .ta-staff-card {
    > div.wp-block-column {
      &:first-child {
        @apply md:max-lg:!basis-1/3;
      }
    }
  }
  @media screen and (max-width: theme(screens.lg)){
    h3.ta-staff-block-heading{
      margin-block-start: var(--wp--preset--spacing--sp-base);
    }
    .ta-staff-block-columns{
      margin-block-start: var(--wp--preset--spacing--sp-base);
    }
    .ta-staff-block-columns.ta-staff-block-has-empty-column{
      gap: var(--wp--preset--spacing--sp-0);
    }
  }
}
/* services columns */
.ta-services-columns.is-layout-flex {
  gap: var(--wp--preset--spacing--sp-base);
}

@media screen and (min-width: 1024px) and (max-width: 1160px) {
  .ta-services-columns {
    @apply !flex-wrap;
    .is-layout-flow.wp-block-column {
      @apply !basis-full;
    }
  }
}

