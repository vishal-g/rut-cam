/* BASIC STYLING */
@layer base {
  body {
    @apply bg-clr-base;
  }
  p {
    @apply text-fs-base md:text-fs-xl;
  }
}

/* Testimonial Swiper Styling */

.ta-testimonials-wrapper {
  .swiper {
    width: 100%;
    height: 100%;
  }

  .ta-swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;

    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .ta-testimonial-name {
    @apply text-lg font-fw-bold;
  }

  .ta-testimonial-title {
    @apply text-fs-sm font-fw-regular;
  }

  .ta-testimonials-text {
    @apply text-lg font-fw-semi-bold mb-4 leading-lh-normal;
  }
}

/* Sidebar Widgets */

.ta-sidebar-widget {
  @apply p-7 bg-white rounded-lg;
}

/* Custom Classes/Styling */
.ta-teamblock-name {
  font-size: 1.15rem !important;
  margin-bottom: 5px;

  @apply font-bold;
}
.ta-teamblock-details {
  text-transform: uppercase;
  margin-bottom: 5px;
  @apply text-sm;
}
.ta-team-container h3 {
  /* font-size: 19px; */
}
.ta-team-container .ta-section-wrapper p {
  font-size: 13px;
  line-height: 1.35;
}
.ta-rounded-border {
  border-radius: 10px;
}
.ta-rounded-border-div {
  border-radius: 0 0 10px 10px;
}
.sfas-carousel .swiper-button-prev {
  background-image: url(/wp-content/uploads/2022/12/caroussel-arrow-left.svg);
}
.sfas-carousel .swiper-button-next {
  background-image: url(/wp-content/uploads/2022/12/caroussel-arrow-right.svg);
}
.sfas-carousel .swiper-button-prev,
.sfas-carousel .swiper-button-next {
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: center;
  @apply w-10 h-10;
  top: 40%;
}
.sfas-carousel .swiper-button-next:after,
.sfas-carousel .swiper-button-prev:after {
  display: none;
}
@media screen and (min-width: 976px) and (max-width: 1135px) {
  #top-header .ta-header-logo-container {
    max-width: 22%;
  }
  #top-header .ta-header-logo {
    width: 70%;
  }
}
#ta-sidebar {
  input {
    font-size: 1rem;
  }
  .ta-tags {
    border-radius: 8px;
  }
}

.ta-image-text-block-wrapper h2 {
  @apply mb-3;
}

.ta-item-spacings p,
.ta-image-text-block-wrapper p {
  @apply mb-3;
}

.ta-image-text-block-wrapper p {
  @apply text-lg;
}

.ta-sidebar-search {
  @apply hidden lg:block;
}

.ta-mobile-search {
  @apply block lg:hidden;
}

/* Staff page */

.ta-team-member-wrapper {
  @apply flex items-center justify-between w-full bg-white rounded-lg;

  img {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }

  .ta-team-member-wrapper-inner {
    @apply flex flex-col sm:flex-row w-full items-start sm:items-start self-start max-sm:px-7 max-sm:py-7;
  }

  .ta-team-member-avatar {
    @apply w-full max-lg:max-w-none max-sm:w-40 max-md:w-44 md:w-52;
  }
}

/* Lottie Container */

.wp-site-blocks .ta-lottie-container {
  @apply mt-0;
  margin-block-start: var(--wp--preset--spacing--sp-0) !important;
}

/* Headers */

.ta-header-1 {
  @apply bg-clr-white py-4 px-8 lg:shadow-sh-01;
  .wp-block-site-logo .custom-logo {
    @apply w-40 !max-h-[85px] lg:w-80;
  }
}

.ta-header-2 {
  @apply hidden lg:block;
}

/* Featured Items */
body .ta-featured-items.wp-block-group {
  & > * + * {
    margin-block-start: 0;
  }
  .is-layout-flow > * + * {
    margin-block-start: 0;
  }
  .wp-block-columns {
    gap: 0;
  }
  h4 {
    @apply mt-0 text-left leading-6 pl-5 bg-[url("../images/bullet-icon.svg")] bg-[left_top_0.25rem] bg-no-repeat;
  }

  .ta-flex-fix-featured {
    flex-grow: 1;
    @media screen and (min-width: theme(screens.md)) and (max-width: theme(screens.lg)) {
      flex-wrap: wrap !important;
      .wp-block-column {
        flex: 50%;
      }
    }
  }

  figure.wp-block-image {
    @apply hidden;
  }

  @media screen and (min-width: theme(screens.lg)) {
    & > * + * {
      margin-block-start: var(--wp--preset--spacing--sp-xl);
    }
    .is-layout-flow > * + * {
      margin-block-start: var(--wp--preset--spacing--sp-base);
    }
    .wp-block-columns {
      gap: var(--wp--preset--spacing--sp-base);
    }
    figure.wp-block-image {
      @apply table;
    }
    h4 {
      @apply text-fs-lg text-center bg-none mt-5 pl-0;
    }
  }
}

/* Student Success Stories / Sidebar Blog Widget  */
.ta-sidebar-blog-widget {
  @apply flex flex-col space-y-6;
  .ta-sidebar-blog-widget__blog-item {
    @apply flex flex-col space-y-3 pb-6 border-0 border-solid border-b border-clr-secondary border-opacity-30 last:border-0;
    .ta-post-title {
      @apply text-base font-bold;
      @media screen and (min-width: 1200px) {
        color: green !important;
      }
    }
    .ta-author {
      @apply text-base font-bold;
    }
    .ta-post-date {
      @apply text-sm;
    }
    .ta-name-initials {
      a {
        @apply rounded-full flex leading-4 items-center justify-center bg-clr-secondary  uppercase w-12 h-12 text-white;
      }
    }
  }
}

.ta-category-listing {
  margin-bottom: 0;
  .ta-tags {
    @media screen and (min-width: 976px) {
      @apply bg-clr-primary  text-white text-xs;
    }
  }
}

/* Video Popup */
.wpzoom-video-popup-block_icon {
  path {
    @apply fill-white;
  }
}

/* Footer Styling */
.ta-footer-container.is-layout-constrained {
  @apply p-sp-base mt-10;

  & > .wp-block-group:first-child {
    @apply mt-sp-lg;
  }

  & > * + * {
    margin-block-start: 3rem;
  }

  .ta-footer__bottom-text {
    @apply text-fs-sm;
    p {
      @apply text-fs-base;
    }
  }
  .ta-footer__main-nav {
    .wp-block-navigation-item__content {
      @apply text-fs-lg font-fw-bold;
    }
  }

  .wp-block-image img {
    @apply mx-auto md:mx-0;
  }

  .ta-footer-nav-1,
  .ta-footer-nav-2 {
    .wp-block-navigation__container {
      @apply flex flex-col gap-2 md:flex-row md:gap-sp-base;
    }
  }
  .ta-footer-social-icons {
  }
}

/* page content wrapper styling*/

div.ta-content-wrapper {
  @apply max-lg:!flex-wrap;
  div.ta-left-content {
    @apply max-lg:!basis-full;
  }
  div.ta-right-content {
    @apply max-lg:!basis-full;
  }
}
.wp-site-blocks {
  > div.wp-block-group.alignfull {
    &:has(.ta-content-wrapper) {
      /* @apply max-md:px-sp-00; */
    }
  }
}
@media screen and (max-width: theme(screens.md)) {
  .wp-block-group.sidebar {
    > div.wp-block-group {
      @apply rounded-none;
      margin-right: calc(var(--wp--style--root--padding-right) * -1) !important;
      margin-left: calc(var(--wp--style--root--padding-left) * -1) !important;
    }
  }
}
