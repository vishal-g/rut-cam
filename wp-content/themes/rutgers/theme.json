{
  "$schema": "https://schemas.wp.org/wp/6.1/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1280px"
    },
    "color": {
      "custom": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "color": "#F4F4F4",
          "name": "Base",
          "slug": "clr-base"
        },
        {
          "color": "#CC0033",
          "name": "Primary",
          "slug": "clr-primary"
        },
        {
          "color": "#5F6A72",
          "name": "Secondary",
          "slug": "clr-secondary"
        },
        {
          "color": "#FFFFFF",
          "name": "White",
          "slug": "clr-white"
        },
        {
          "color": "#000000",
          "name": "Black",
          "slug": "clr-black"
        }
      ]
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Source Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "var(--wp-custom--font-weight--fw-regular)",
              "src": [
                "file:./assets/build/fonts/source-sans/SourceSansPro-Regular.otf"
              ]
            },
            {
              "fontFamily": "Source Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/build/fonts/source-sans/SourceSansPro-Bold.otf"
              ]
            }
          ],
          "fontFamily": "\"Source Sans\", sans-serif",
          "name": "Source Sans",
          "slug": "ff-source-sans"
        }
      ],
      "fontSizes": [
        {
          "fluid": {
            "max": "14px",
            "min": "14px"
          },
          "name": "Small",
          "size": "14px",
          "slug": "fs-small"
        },
        {
          "fluid": {
            "max": "16px",
            "min": "16px"
          },
          "name": "Base",
          "size": "16px",
          "slug": "fs-base"
        },
        {
          "fluid": {
            "max": "20px",
            "min": "20px"
          },
          "name": "Medium",
          "size": "20px",
          "slug": "fs-medium"
        },
        {
          "fluid": {
            "max": "24px",
            "min": "24px"
          },
          "name": "Large",
          "size": "24px",
          "slug": "fs-large"
        },
        {
          "fluid": {
            "max": "50px",
            "min": "34px"
          },
          "name": "xLarge",
          "size": "50px",
          "slug": "fs-x-large"
        },
        {
          "fluid": {
            "max": "36px",
            "min": "30px"
          },
          "name": "36px",
          "size": "36px",
          "slug": "fs-max-36"
        },
        {
          "fluid": {
            "max": "48px",
            "min": "36px"
          },
          "name": "48px",
          "size": "48px",
          "slug": "fs-max-48"
        },
        {
          "fluid": {
            "max": "60px",
            "min": "42px"
          },
          "name": "60px",
          "size": "60px",
          "slug": "fs-max-60"
        },
        {
          "fluid": {
            "max": "72px",
            "min": "48px"
          },
          "name": "72px",
          "size": "72px",
          "slug": "fs-max-72"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "name": "0",
          "size": "0",
          "slug": "sp-00"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "shadow": {
      "palette": [
        {
          "name": "Shadow Medium",
          "slug": "sh-01",
          "shadow": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);"
        }
      ]
    },
    "custom": {
      "typography": {
        "font-size": {
          "fs-huge": "clamp(2.25rem, 4vw, 2.75rem)",
          "fs-gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
          "fs-colossal": "clamp(3.25rem, 8vw, 6.25rem)"
        },
        "fontWeight": {
          "fw-thin": 100,
          "fw-extra-light": 200,
          "fw-light": 300,
          "fw-regular": 400,
          "fw-medium": 500,
          "fw-semi-bold": 600,
          "fw-bold": 700,
          "fw-extra-bold": 800,
          "fw-black": 900
        },
        "lineHeight": {
          "lh-body": 1.75,
          "lh-heading": 1.1,
          "lh-base": 1.4,
          "lh-one": 1
        }
      }
    },
    "border": {
      "radius": "10px"
    }
  },
  "styles": {
    "spacing": {
      "blockGap": "1.5rem",
      "padding": {
        "right": "1.5rem",
        "left": "1.5rem"
      }
    },
    "typography": {
      "fontFamily": "var:preset|font-family|ff-source-sans",
      "fontSize": "var(--wp--preset--font-size--fs-base)"
    },

    "color": {
      "text": "var(--wp--preset--color--clr-black)"
    },

    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-small)"
        }
      }
    },

    "elements": {
      "button": {
        "color": {
          "text": "var:preset|color|clr-white"
        }
      },
      "p": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-medium)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "3.625rem"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-large)"
        },
        "color": {
          "text": "var(--wp--preset--color--clr-primary)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)"
        }
      },
      "h4": {
        "color": {
          "text": "var(--wp--preset--color--clr-secondary)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)",
          "textTransform": "uppercase"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)",
          "textTransform": "uppercase"
        }
      },
      "heading": {
        "color": {
          "text": "#000000"
        },
        "typography": {
          "lineHeight": "1.2",
          "fontWeight": "var(--wp--custom--typography--font-weight--fw-bold)"
        }
      },
      "link": {
        "color": {
          "text": "var:preset|color|clr-black"
        }
      }
    }
  }
}
