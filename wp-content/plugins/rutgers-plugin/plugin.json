{
  "$schema": "https://schemas.wp.org/wp/6.1/theme.json",
  "version": 2,
  "customTemplates": [
    {
      "name": "header-footer",
      "postTypes": ["page"],
      "title": "header-footer"
    },
    {
      "name": "header-footer-sidebar-1",
      "postTypes": ["page"],
      "title": "header-footer-sidebar-1"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1580px",
      "wideSize": "1600px"
    },
    "color": {
      "custom": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "color": "#F4F4F4",
          "name": "Base",
          "slug": "clr-base"
        },
        {
          "color": "#CC0033",
          "name": "Primary",
          "slug": "clr-primary"
        },
        {
          "color": "#5F6A72",
          "name": "Secondary",
          "slug": "clr-secondary"
        },
        {
          "color": "#FFFFFF",
          "name": "White",
          "slug": "clr-white"
        },
        {
          "color": "#000000",
          "name": "Black",
          "slug": "clr-black"
        }
      ]
    },
    "typography": {
      "fluid": false,
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Source Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": [
                "file:./assets/build/fonts/source-sans/SourceSansPro-Regular.otf"
              ]
            },
            {
              "fontFamily": "Source Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": [
                "file:./assets/build/fonts/source-sans/SourceSansPro-Bold.otf"
              ]
            },
            {
              "fontFamily": "Source Sans",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "600",
              "src": [
                "file:./assets/build/fonts/source-sans/SourceSansPro-Semibold.otf"
              ]
            }
          ],
          "fontFamily": "\"Source Sans\", sans-serif",
          "name": "Source Sans",
          "slug": "ff-source-sans"
        }
      ],
      "fontSizes": [
        {
          "name": "xSmall",
          "size": "0.75rem",
          "slug": "fs-xs"
        },
        {
          "name": "Custom",
          "size": "0.938rem",
          "slug": "fs-custom"
        },
        {
          "name": "Small",
          "size": "0.875rem",
          "slug": "fs-sm"
        },
        {
          "name": "Base",
          "size": "1rem",
          "slug": "fs-base"
        },
        {
          "name": "Large",
          "size": "1.125rem",
          "slug": "fs-lg"
        },
        {
          "name": "Extra Large",
          "size": "1.25rem",
          "slug": "fs-xl"
        },
        {
          "name": "2XL",
          "size": "1.5rem",
          "slug": "fs-2-xl"
        },
        {
          "name": "3XL",
          "size": "1.875rem",
          "slug": "fs-3-xl"
        },
        {
          "name": "4XL",
          "size": "2.25rem",
          "slug": "fs-4-xl"
        },
        {
          "fluid": {
            "max": "36px",
            "min": "30px"
          },
          "name": "36px",
          "size": "36px",
          "slug": "fs-max-36"
        },
        {
          "fluid": {
            "max": "48px",
            "min": "36px"
          },
          "name": "48px",
          "size": "48px",
          "slug": "fs-max-48"
        },
        {
          "fluid": {
            "max": "60px",
            "min": "42px"
          },
          "name": "60px",
          "size": "60px",
          "slug": "fs-max-60"
        },
        {
          "fluid": {
            "max": "72px",
            "min": "48px"
          },
          "name": "72px",
          "size": "72px",
          "slug": "fs-max-72"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "name": "sp-0",
          "size": "0",
          "slug": "sp-00"
        },
        {
          "name": "sp-xs",
          "size": "0.5rem",
          "slug": "sp-xs"
        },
        {
          "name": "sp-sm",
          "size": "1rem",
          "slug": "sp-sm"
        },
        {
          "name": "sp-base",
          "size": "1.5rem",
          "slug": "sp-base"
        },
        {
          "name": "sp-lg",
          "size": "2rem",
          "slug": "sp-lg"
        },
        {
          "name": "sp-xl",
          "size": "3rem",
          "slug": "sp-xl"
        },
        {
          "name": "sp-inner",
          "size": "2rem",
          "slug": "sp-inner"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "shadow": {
      "palette": [
        {
          "name": "Shadow Medium",
          "slug": "sh-01",
          "shadow": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);"
        }
      ]
    },
    "custom": {
      "typography": {
        "fontWeight": {
          "fw-thin": 100,
          "fw-extra-light": 200,
          "fw-light": 300,
          "fw-regular": 400,
          "fw-medium": 500,
          "fw-semi-bold": 600,
          "fw-bold": 700,
          "fw-extra-bold": 800,
          "fw-black": 900
        },
        "lineHeight": {
          "lh-none": "1",
          "lh-tight": "1.25",
          "lh-snug": "1.375",
          "lh-normal": "1.5",
          "lh-relaxed": "1.625",
          "lh-loose": "2"
        }
      }
    },
    "border": {
      "radius": "10px"
    }
  },
  "styles": {
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--sp-xl)",
      "padding": {
        "right": "1.5rem",
        "left": "1.5rem"
      }
    },
    "typography": {
      "fontFamily": "var:preset|font-family|ff-source-sans",
      "fontSize": "var(--wp--preset--font-size--fs-base)",
      "fontWeight": "400"
    },

    "color": {
      "text": "var(--wp--preset--color--clr-black)"
    },

    "blocks": {},

    "elements": {
      "button": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-lg)"
        },
        "color": {
          "text": "var:preset|color|clr-white",
          "background": "var(--wp--preset--color--clr-primary)"
        },
        "spacing": {
          "padding": {
            "top": "0.5rem",
            "bottom": "0.5rem",
            "right": "1.5rem",
            "left": "1.5rem"
          }
        },
        "border": {
          "radius": "0"
        }
      },
      "p": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "3.625rem"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-2-xl)"
        },
        "color": {
          "text": "var(--wp--preset--color--clr-primary)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)"
        }
      },
      "h4": {
        "color": {
          "text": "var(--wp--preset--color--clr-secondary)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)",
          "textTransform": "uppercase"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--fs-base)",
          "textTransform": "uppercase"
        }
      },
      "heading": {
        "color": {
          "text": "#000000"
        },
        "typography": {
          "lineHeight": "1.2",
          "fontWeight": "var(--wp--custom--typography--font-weight--fw-bold)"
        }
      },
      "link": {
        "color": {
          "text": "var:preset|color|clr-black"
        }
      }
    }
  }
}
