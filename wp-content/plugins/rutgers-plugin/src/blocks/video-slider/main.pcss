/* Editor Styles */
.wp-block-tbones-p-video-slider[data-type="tbones-p/video-slider"] {
  display: inherit;
}

.wp-block-tbones-p-video-slider[data-type="tbones-p/video-slider"]
  .block-editor-block-list__layout {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 1rem;
  align-items:start;
}

.wp-block-tbones-p-video-slider[data-type="tbones-p/video-slider"].cols-3
  .block-editor-block-list__layout {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

/* Carousel common */
/* 
const imageClass = showImage ? "" : "ta-img-hidden";
