/* ARROWS */
.sfas-carousel .swiper-button-prev,
.sfas-carousel .swiper-button-next {
  color: #f69259;
}

.mySwiper,
.sfas-carousel,
.ta-testimonials-swiper {
  width: 100%;
}

.sfas-carousel,
.ta-testimonials-swiper {
  padding-bottom: 50px;
}

.image-video-icon-wrapper {
  position: relative;
  .ta-carousel__button {
    @apply p-0 m-0 bg-transparent absolute top-1/2 left-1/2;
    transform: translate(-50%, -50%);
    min-height: auto;
  }
  img {
    filter: brightness(50%)
  }
  .wpzoom-video-popup-block_icon svg {
    width:50px;
    height:50px;
    filter: brightness(50%)

  }
}
.sfas-carousel .swiper-slide.swiper-slide-active {
  .image-video-icon-wrapper { 
    .wpzoom-video-popup-block_icon svg { 
      filter: brightness(100%)
    }
  }
}

/* editor styles */
.sfas-carousel .block-editor-block-list__layout .swiper-slide {
  opacity:1!important;
}