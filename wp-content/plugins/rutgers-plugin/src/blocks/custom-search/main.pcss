.custom-search-block {
  display: flex;
  gap: 10px;
  align-items: center;
  margin-top: 10px;

  .custom-search-input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .custom-search-button {
    padding: 8px 16px;
    background-color: #007cba;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;

    &:hover {
      background-color: #005a8e;
    }
  }
}
